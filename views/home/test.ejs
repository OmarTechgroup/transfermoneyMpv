    <script src="../indexedDB.js"></script>
    <script>
        // --- NAVIGATION --- //

        /**
         * Affiche la page du tableau de bord.
         */
        function showDashboard() {
            hideAllPages();
            document.getElementById('dashboardPage').style.display = 'block';
            setActiveMenu(0);
        }

        /**
         * Affiche la page d'envoi d'argent.
         */
        function showSendMoney() {
            hideAllPages();
            document.getElementById('sendMoneyPage').style.display = 'block';
            setActiveMenu(3);
        }

        /**
         * Affiche la page des statistiques.
         */
        function showStats() {
            hideAllPages();
            document.getElementById('statsPage').style.display = 'block';
            setActiveMenu(1);
        }

        /**
         * Affiche la page du code QR.
         */
        function showQRCode() {
            hideAllPages();
            document.getElementById('qrCodePage').style.display = 'block';
            setActiveMenu(2);
        }

        /**
         * Masque toutes les pages.
         */
        function hideAllPages() {
            document.getElementById('homePage').style.display = 'none';
            document.getElementById('dashboardPage').style.display = 'none';
            document.getElementById('sendMoneyPage').style.display = 'none';
            document.getElementById('statsPage').style.display = 'none';
            document.getElementById('qrCodePage').style.display = 'none';
        }

        /**
         * Met en surbrillance l'Ã©lÃ©ment de menu actif.
         * @param {number} index - L'index de l'Ã©lÃ©ment de menu Ã  activer.
         */
        function setActiveMenu(index) {
            const menuItems = document.querySelectorAll('.menu-item');
            menuItems.forEach((item, i) => {
                if (i === index) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        }

        // --- DATA LOADING --- //

        /**
         * Charge les donnÃ©es du tableau de bord de l'utilisateur Ã  partir d'IndexedDB.
         */
        function loadDashboardData() {
            const userId = parseInt(sessionStorage.getItem('userId'));
            if (!userId) return;

            const transaction = db.transaction(['users', 'transactions'], 'readonly');
            const usersStore = transaction.objectStore('users');
            const transactionsStore = transaction.objectStore('transactions');

            // RÃ©cupÃ©rer les informations de l'utilisateur
            const userRequest = usersStore.get(userId);
            userRequest.onsuccess = () => {
                const user = userRequest.result;
                if (user) {
                    const initials = `${user.prenom.charAt(0)}${user.nom.charAt(0)}`;
                    document.getElementById('user-name').textContent = `${user.prenom} ${user.nom}`;
                    document.getElementById('user-name-qr').textContent = `${user.prenom} ${user.nom}`;
                    document.getElementById('user-id-qr').textContent = `ID: ${user.id}`;
                    document.getElementById('balance-qr').textContent = `${user.balance} CFA`;
                    document.getElementById('total-balance').textContent = `${user.balance} CFA`;
                    document.getElementById('balance-dashboard').textContent = `${user.balance} CFA`;
                    document.querySelectorAll('.transaction-avatar').forEach(el => el.textContent = initials);
                }
            };

            // RÃ©cupÃ©rer les transactions
            const fromIndex = transactionsStore.index('fromUserId');
            const toIndex = transactionsStore.index('toUserId');

            const fromRequest = fromIndex.getAll(userId);
            const toRequest = toIndex.getAll(userId);

            let sentTransactions = [];
            let receivedTransactions = [];

            fromRequest.onsuccess = () => {
                sentTransactions = fromRequest.result;
                checkAndRenderTransactions();
            };

            toRequest.onsuccess = () => {
                receivedTransactions = toRequest.result;
                checkAndRenderTransactions();
            };

            function checkAndRenderTransactions() {
                if (fromRequest.readyState === 'done' && toRequest.readyState === 'done') {
                    const allTransactions = [...sentTransactions, ...receivedTransactions];
                    allTransactions.sort((a, b) => new Date(b.date) - new Date(a.date));
                    renderTransactions(allTransactions, userId);
                }
            }
        }

        function renderTransactions(transactions, currentUserId) {
            const lastTransactions = document.getElementById('last-transactions');
            lastTransactions.innerHTML = '';

            if (transactions.length === 0) {
                lastTransactions.innerHTML = '<p style="text-align: center; color: #999;">Aucune transaction rÃ©cente.</p>';
                return;
            }

            transactions.forEach(tx => {
                const isSent = tx.fromUserId === currentUserId;
                const otherUserId = isSent ? tx.toUserId : tx.fromUserId;

                const transaction = db.transaction(['users'], 'readonly');
                const usersStore = transaction.objectStore('users');
                const userRequest = usersStore.get(otherUserId);

                userRequest.onsuccess = () => {
                    const otherUser = userRequest.result;
                    if (otherUser) {
                        const amountClass = isSent ? 'text-danger' : 'text-success';
                        const amountSign = isSent ? '-' : '+';
                        const transactionCard = `
                            <div class="transaction-card">
                                <div class="transaction-left">
                                    <div class="transaction-avatar">${otherUser.prenom.charAt(0)}${otherUser.nom.charAt(0)}</div>
                                    <div class="transaction-info">
                                        <h6>${otherUser.prenom} ${otherUser.nom}</h6>
                                        <small>${new Date(tx.date).toLocaleDateString()}</small>
                                    </div>
                                </div>
                                <div class="transaction-amount ${amountClass}">${amountSign}${tx.amount} CFA</div>
                            </div>
                        `;
                        lastTransactions.innerHTML += transactionCard;
                    }
                };
            });
        }

        // --- EVENT LISTENERS --- //

        /**
         * Se dÃ©clenche au chargement de la page pour charger les donnÃ©es du tableau de bord et animer les graphiques.
         */
        window.addEventListener('load', () => {
            loadDashboardData();

            // Animer les barres du graphique
            const bars = document.querySelectorAll('.bar');
            bars.forEach((bar, index) => {
                setTimeout(() => {
                    bar.style.opacity = '0';
                    bar.style.transform = 'scaleY(0)';
                    bar.style.transformOrigin = 'bottom';
                    bar.style.transition = 'all 0.5s ease';
                    
                    setTimeout(() => {
                        bar.style.opacity = '1';
                        bar.style.transform = 'scaleY(1)';
                    }, 100);
                }, index * 100);
            });
        });

        /**
         * GÃ¨re le clic sur le bouton "Transfer Payment".
         */
        document.getElementById('transfer-payment').addEventListener('click', () => {
            const senderId = parseInt(sessionStorage.getItem('userId'));
            const recipientphone = document.getElementById('recipient-phone').value;
            const amount = parseFloat(document.getElementById('amount-to-send').textContent.replace('$', ''));

            // Valider les entrÃ©es
            if (!recipientphone || !amount) {
                alert('Veuillez saisir un destinataire et un montant.');
                return;
            }

            // Ouvrir une transaction de base de donnÃ©es
            const transaction = db.transaction(['users', 'transactions'], 'readwrite');
            const usersStore = transaction.objectStore('users');
            const transactionsStore = transaction.objectStore('transactions');

            // Obtenir l'expÃ©diteur
            const senderRequest = usersStore.get(senderId);

            senderRequest.onsuccess = () => {
                const sender = senderRequest.result;

                // VÃ©rifier le solde
                if (sender.balance < amount) {
                    alert('Solde insuffisant.');
                    return;
                }

                // Obtenir le destinataire
                const recipientIndex = usersStore.index('phone');
                const recipientRequest = recipientIndex.get(recipientphone);

                recipientRequest.onsuccess = () => {
                    const recipient = recipientRequest.result;

                    // VÃ©rifier si le destinataire existe
                    if (!recipient) {
                        alert('Destinataire introuvable.');
                        return;
                    }

                    // Mettre Ã  jour les soldes
                    sender.balance -= amount;
                    recipient.balance += amount;

                    // Mettre Ã  jour les enregistrements utilisateur
                    usersStore.put(sender);
                    usersStore.put(recipient);

                    // CrÃ©er un nouvel enregistrement de transaction
                    const newTransaction = {
                        fromUserId: senderId,
                        toUserId: recipient.id,
                        amount: amount,
                        date: new Date()
                    };

                    transactionsStore.add(newTransaction);

                    // GÃ©rer la rÃ©ussite de la transaction
                    transaction.oncomplete = () => {
                        alert('Transfert rÃ©ussi!');
                        document.getElementById('recipient-phone').value = '';
                        document.getElementById('amount-to-send').textContent = '$0.00';
                        showDashboard();
                        loadDashboardData();
                    };
                };
            };
        });

        /**
         * GÃ¨re les clics sur les boutons du clavier.
         */
        const keypadBtns = document.querySelectorAll('.keypad-btn');
        const amountToSend = document.getElementById('amount-to-send');
        keypadBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const value = btn.textContent.trim();
                let currentAmount = amountToSend.textContent.replace('$', '');

                if (btn.querySelector('i.fa-backspace')) {
                    // GÃ©rer la suppression
                    currentAmount = currentAmount.slice(0, -1);
                    if (currentAmount === '') {
                        currentAmount = '0.00';
                    }
                } else if (value === '.') {
                    // GÃ©rer le point dÃ©cimal
                    if (!currentAmount.includes('.')) {
                        currentAmount += '.';
                    }
                } else {
                    // GÃ©rer les chiffres
                    if (currentAmount === '0.00') {
                        currentAmount = value;
                    } else {
                        currentAmount += value;
                    }
                }

                amountToSend.textContent = `${currentAmount} CFA`;
            });
        });

    </script>
